<h2>Add Owner to System</h2>

<form class="list" action="/owners" method="POST">
  <fieldset>


    <label for="first_name">First Name</label>
    <input type="text" name="first_name" placeholder="First Name">

    <label for="last_name">Last Name</label>
    <input type="text" name="last_name" placeholder="Last Name">

    <label for="address">Address</label>
    <input type="text" name="address" placeholder="Address">

    <label for="tel_no">Tel No</label>
    <input type="text" name="tel_no" placeholder="Tel No">

    <label for="registered">Registered to Practice</label>
    <select name="registered" id="registered" required>
      <option value="">--Please choose an option--</option>
      <option value="true">Yes</option>
      <option value="false">No</option>
    </select>
    <input class="btn cell" type='submit' value="Add">
  </fieldset>

</form>

<p></p>
<div class="list">
  <a class="item_select cell" href="/owners">
      <label for="">Cancel</label>
  </a>
</div>
