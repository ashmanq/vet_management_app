<p></p>
<h2>Edit Owner Details</h2>

<form class="list" action="/owners/<%= @owner.id %>" method="POST">
  <fieldset>


    <label for="first_name">First Name</label>
    <input type="text" name="first_name" placeholder="First Name" value="<%= @owner.first_name.capitalize %>">

    <label for="last_name">Last Name</label>
    <input type="text" name="last_name" placeholder="Last Name" value="<%= @owner.last_name.capitalize %>">

    <label for="address">Address</label>
    <input type="text" name="address" placeholder="Address" value="<%= @owner.address %>">

    <label for="tel_no">Tel No</label>
    <input type="text" name="tel_no" placeholder="Tel No" value="<%= @owner.tel_no %>">

    <label for="registered">Registered</label>
    <select class="" name="registered">
      <option value="0" <% if @owner.registered == 'f' %> <%= p "selected "%> <% end %>>No</option>
      <option value="1" <% if @owner.registered == 't' %> <%= p "selected "%> <% end %>>Yes</option>
    </select>

    <input class="btn cell" type='submit' value="Update">
  </fieldset>
</form>

<p></p>

<div class="list">
  <a class="item_select cell" href="/owners/<%= @owner.id %>">
      <label for="">Cancel</label>
  </a>
</div>
