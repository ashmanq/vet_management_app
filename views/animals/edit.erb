
<p></p>
<h2>Edit Details</h2>

<form class="list" action="/animals/<%= @animal.id %>" method="POST">
  <fieldset>
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="Name" value="<%= @animal.name %>">


    <label for="type">Type</label>
    <input type="text" name="type" placeholder="Type" value="<%= @animal.type %>">


    <label for="dob">DoB</label>
    <input type="date" name="dob" placeholder="DD/MM/YYYY" value="<%= @animal.dob %>">

    <label for="vet_id">Select Vet:</label>
    <select name="vet_id" id="vet_id">
      <% for vet in @vets %>
      <option value="<%= vet.id %>"
        <% if @animal.vet_id == vet.id %>
        <%= p "selected" %>
        <% end %>><%= vet.full_name %></option>
      <% end %>
    </select>

    <label for="owner_id">Owner:</label>
    <input type="text" name="owner_name" value="<%= @animal.owner().full_name() %>" disabled>
    <!-- The following line of code is needed to send the owner id along with the form post request. It's hidden from the user -->
    <input type="text" name="owner_id" value="<%= @animal.owner_id %>" hidden>

    <input class="btn cell" type='submit' value="Update">
  </fieldset>

</form>

<p></p>

<div class="list">
  <a class="item_select cell" href="/animals/<%= @animal.id %>">
      <label for="">Cancel</label>
  </a>
</div>
