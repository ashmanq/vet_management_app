<h1><%= @vet.full_name %></h1>

<section class="list">
  <!-- <div class="list"> -->
    <a class="item_select cell" href="/vets/<%= @vet.id %>/edit">
        <label for="">Edit</label>
    </a>
    <a class="item_select cell" href="/vets/remove/<%= @vet.id %>">
        <label for="">Remove</label>
    </a>
  <!-- </div> -->
</section>

<h2>Responsible for:</h2>
<section class="list">
  <% if @animals != nil %>
    <% for animal in @animals %>
      <a class="item_select cell" href="/animals/<%= animal.id %>">
          <h2> <%= animal.name %> </h2>
          <p> <%= animal.type %> </p>
          <img src="" alt="">
      </a>
    <% end %>
  <% else %>
  <h2 class="warning_msg" >Not responsible for any pets.</h2>
  <% end %>
</section>
